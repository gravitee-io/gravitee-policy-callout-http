{
  "extends": [
    "config:base"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchDatasources": ["orb"],
      "rangeStrategy": "replace"
    },
    {
      "matchDepTypes": ["provided", "test", "build", "import", "parent"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "branch",
      "semanticCommitType": "chore"
    }
  ]
}