{
    "id": "proxy-response-el-support",
    "name": "my-api",
    "gravitee": "4.0.0",
    "type": "proxy",
    "listeners": [
        {
            "type": "http",
            "paths": [
                {
                    "path": "/proxy-response-el-support"
                }
            ],
            "entrypoints": [{ "type": "http-proxy" }]
        }
    ],
    "endpointGroups": [
        {
            "name": "default",
            "type": "http-proxy",
            "endpoints": [
                {
                    "name": "default-endpoint",
                    "type": "http-proxy",
                    "configuration": { "target": "http://localhost:8080/endpoint" }
                }
            ]
        }
    ],
    "flows": [
        {
            "name": "flow-1",
            "methods": [],
            "enabled": true,
            "path-operator": {
                "path": "/",
                "operator": "STARTS_WITH"
            },
            "request": [],
            "response": [
                {
                    "name": "Callout HTTP",
                    "description": "",
                    "enabled": true,
                    "policy": "policy-http-callout",
                    "configuration": {
                        "method": "POST",
                        "url": "CALLOUT_URL{#request.headers['X-Url'][0]}",
                        "headers": [
                            {
                                "name": "X-Callout1",
                                "value": "{#request.headers['X-Header1'][0]}"
                            },
                            {
                                "name": "X-Callout2",
                                "value": "{#request.headers['X-Header2'][0]}"
                            }
                        ],
                        "body": "{#request.headers['X-Body'][0]}",
                        "fireAndForget": true
                    }
                },
                {
                    "name": "Assign content",
                    "description": "",
                    "enabled": true,
                    "policy": "assign-content",
                    "configuration": {
                        "scope": "RESPONSE",
                        "body": "new content"
                    }
                }
            ]
        }
    ]
}
